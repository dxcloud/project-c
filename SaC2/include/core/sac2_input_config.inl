#ifndef SAC2_INPUT_CONFIG_HPP_INCLUDE
#define SAC2_INPUT_CONFIG_HPP_INCLUDE

namespace sac2
{

//////////////////////////////////////////////////////////////////////////////
// InputConfig::InputConfig
//////////////////////////////////////////////////////////////////////////////
inline InputConfig::InputConfig()
{
  LOG_INFO("InputConfig::ctor - new input config created")
}

//////////////////////////////////////////////////////////////////////////////
// InputConfig::~InputConfig
//////////////////////////////////////////////////////////////////////////////
inline InputConfig::~InputConfig()
{
  LOG_INFO("InputConfig::dtor - input config deleted")
}

//////////////////////////////////////////////////////////////////////////////
// InputConfig::is_key_pressed
//////////////////////////////////////////////////////////////////////////////
inline bool InputConfig::is_key_pressed(key_t key)
{
  return sf::Keyboard::isKeyPressed(static_cast<sf::Keyboard::Key>(key));
}

}  // namespace sac2

#endif  //! SAC2_INPUT_CONFIG_HPP_INCLUDE
