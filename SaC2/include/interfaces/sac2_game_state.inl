#ifndef SAC2_GAME_STATE_INL
#define SAC2_GAME_STATE_INL

namespace sac2
{

//////////////////////////////////////////////////////////////////////////////
// GameState::GameState()
//////////////////////////////////////////////////////////////////////////////
inline GameState::GameState():
  m_state_status(UNINITIALIZED)
{
  // nothing to do
}

//////////////////////////////////////////////////////////////////////////////
// GameState::~GameState()
//////////////////////////////////////////////////////////////////////////////
inline GameState::~GameState()
{
  // nothing to do
}

//////////////////////////////////////////////////////////////////////////////
// bool GameState::is_initialized() const
//////////////////////////////////////////////////////////////////////////////
inline bool GameState::is_uninitialized() const
{
  if (UNINITIALIZED == m_state_status) { return true; }
  return false;
}

//////////////////////////////////////////////////////////////////////////////
// bool GameState::is_paused const
//////////////////////////////////////////////////////////////////////////////
inline bool GameState::is_paused() const
{
  if (PAUSED == m_state_status) { return true; }
  return false;
}

//////////////////////////////////////////////////////////////////////////////
// bool GameState::is_running() const
//////////////////////////////////////////////////////////////////////////////
inline bool GameState::is_running() const
{
  if (RUNNING == m_state_status) { return true; }
  return false;
}

//////////////////////////////////////////////////////////////////////////////
// bool GameState::is_stopped() const
//////////////////////////////////////////////////////////////////////////////
inline bool GameState::is_stopped() const
{
  if (STOPPED == m_state_status) { return true; }
  return false;
}

}  // namespace sac2

#endif  //! SAC2_GAME_STATE_INL

